<Window x:Class="TCC.CriarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Criar Conta" Height="577" Width="876">
    <Grid RenderTransformOrigin="0.479,0.497" Margin="0,0,0,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F3BCE7" Margin="0,0,48,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
                <TextBlock Text="Bem vindo de volta!" Foreground="White" FontSize="24" FontWeight="Bold" TextAlignment="Center" Width="244"/>
                <TextBlock Text="Seu sistema personalizado te espera." TextWrapping="Wrap" TextAlignment="Center" Margin="0 0 0 30"/>
                <Button Content="Fazer login" Background="White"  FontWeight="Bold" Padding="12 25" Width="150" Click="GoToLoginButton_Click" BorderThickness="1" BorderBrush="#FFFFFF"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" Margin="10,40,10,40">
            <TextBlock Text="Crie uma conta" FontSize="28" FontWeight="Bold" Margin="0 0 0 30"/>

            <StackPanel Orientation="Horizontal" Margin="0 15">
                <TextBlock Text="Usuario" FontSize="16" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <TextBox x:Name="txtNomeCadastro" Width="341" Padding="8" BorderThickness="1" BorderBrush="LightGray" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 15">
                <TextBlock Text="Email" FontSize="16" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <TextBox x:Name="txtEmailCadastro" Width="357" Padding="8" BorderThickness="1" BorderBrush="LightGray" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 15">
                <TextBlock Text="Senha" FontSize="16" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <PasswordBox x:Name="txtSenhaCadastro" Width="349" Padding="8" BorderThickness="1" BorderBrush="LightGray" />
            </StackPanel>
            <Button Content="Criar" Background="#F3BCE7" FontWeight="Bold" Padding="12 25" Width="150" Click="CreateUserButton_Click" BorderThickness="0" Height="67"/>
        </StackPanel>
    </Grid>
</Window>